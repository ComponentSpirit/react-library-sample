{
  "name": "@fabant/react-library-sample",
  "version": "1.0.0",
  "description": "Sample of a generic react library",
  "repository": "https://github.com/TODO",
  "author": "CompHeaven",
  "license": "MIT",
  "private": true,
  "type": "commonjs",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "files": [
    "/dist"
  ],
  "scripts": {
    "prepack": "yarn build",
    "build": "rollup -c --bundleConfigAsCjs",
    "watch": "rollup -cw",
    "lint": "npx eslint src",
    "lint:fix": "yarn run lint --fix",
    "prettier": "npx prettier src *.js --check",
    "prettier:fix": "yarn run prettier --write",
    "stylelint": "npx stylelint \"./src/**/*.scss\"",
    "stylelint:fix": "yarn run prettier --write",
    "format": "yarn run prettier:fix && yarn run lint:fix && yarn run stylelint:fix"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.4",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.2.1",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "autoprefixer": "^10.4.15",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard-with-typescript": "^38.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "node-sass": "^9.0.0",
    "postcss": "^8.4.28",
    "prettier": "^3.0.2",
    "rollup": "^3.28.1",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-typescript2": "^0.35.0",
    "stylelint": "^15.10.3",
    "stylelint-config-standard": "^34.0.0",
    "typescript": "*"
  }
}
