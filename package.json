{
  "name": "@ComponentSpirit/react-library-sample",
  "version": "1.0.0",
  "description": "Sample of a generic react library",
  "repository": {
    "type": "git",
    "url": "https://github.com/ComponentSpirit/react-library-sample.git"
  },
  "publishConfig": {
    "@ComponentSpirit:registry": "https://npm.pkg.github.com"
  },
