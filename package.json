  "type": "module",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "files": [
    "/dist"
  ],
  "scripts": {
    "prepack": "yarn build",
    "build": "npx vite build",
    "watch": "npx vite",
    "lint": "npx eslint src",
    "lint:fix": "yarn run lint --fix",
    "prettier": "npx prettier src *.js --check",
    "prettier:fix": "yarn run prettier --write",
    "stylelint": "npx stylelint \"./src/**/*.scss\"",
    "stylelint:fix": "yarn run prettier --write",
    "format": "yarn run prettier:fix && yarn run lint:fix && yarn run stylelint:fix",
    "storybook": "storybook dev -p 6006",
    "build:storybook": "storybook build",
    "build-storybook": "storybook build",
    "predeploy": "yarn run build:storybook",
    "deploy": "gh-pages -d storybook-static"
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^7.3.2",
    "@storybook/addon-interactions": "^7.3.2",
    "@storybook/addon-links": "^7.3.2",
